<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="djs.assignment01.MainActivity">

    <GridLayout
        android:id="@+id/board_square_grid_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="4"
        android:paddingBottom="4dip">

        <Button
            android:text="0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:id="@+id/board_square_0" />

        <Button
            android:text="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:id="@+id/board_square_1" />

        <Button
            android:text="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:id="@+id/board_square_2" />

        <Button
            android:text="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:id="@+id/board_square_3" />

        <Button
            android:text="4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:id="@+id/board_square_4" />

        <Button
            android:text="5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:id="@+id/board_square_5" />

        <Button
            android:text="6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:id="@+id/board_square_6" />

        <Button
            android:text="7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:id="@+id/board_square_7" />

        <Button
            android:text="8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:id="@+id/board_square_8" />

        <Button
            android:text="9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:id="@+id/board_square_9" />

        <Button
            android:text="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:id="@+id/board_square_10" />

        <Button
            android:text="11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:id="@+id/board_square_11" />

        <Button
            android:text="12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:id="@+id/board_square_12" />

        <Button
            android:text="13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:id="@+id/board_square_13" />

        <Button
            android:text="14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:id="@+id/board_square_14" />

        <Button
            android:text="15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:id="@+id/board_square_15" />

    </GridLayout>

    <View
        android:paddingTop="4dip"
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="10"
            android:orientation="horizontal">

            <Button
                android:text="A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="on_button_click_switch"
                android:id="@+id/button_switch_a" />

            <TextView
                android:text="0, 1, 2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <Button
                android:text="B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="on_button_click_switch"
                android:id="@+id/button_switch_b" />

            <TextView
                android:text="3, 7, 9, 11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <Button
                android:text="C"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="on_button_click_switch"
                android:id="@+id/button_switch_c" />

            <TextView
                android:text="4, 10, 14, 15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <Button
                android:text="D"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="on_button_click_switch"
                android:id="@+id/button_switch_d" />

            <TextView
                android:text="0, 4, 5, 6, 7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <Button
                android:text="E"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="on_button_click_switch"
                android:id="@+id/button_switch_e" />

            <TextView
                android:text="6, 7, 8, 10, 12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </GridLayout>
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="10"
            android:orientation="horizontal">

            <Button
                android:text="F"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="on_button_click_switch"
                android:id="@+id/button_switch_f" />

            <TextView
                android:text="0, 2, 14, 15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <Button
                android:text="G"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="on_button_click_switch"
                android:id="@+id/button_switch_g" />

            <TextView
                android:text="3, 14, 15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <Button
                android:text="H"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="on_button_click_switch"
                android:id="@+id/button_switch_h" />

            <TextView
                android:text="4, 5, 7, 14, 15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <Button
                android:text="I"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="on_button_click_switch"
                android:id="@+id/button_switch_i" />

            <TextView
                android:text="1, 2, 3, 4, 5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <Button
                android:text="J"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="on_button_click_switch"
                android:id="@+id/button_switch_j" />

            <TextView
                android:text="3, 4, 5, 9, 13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </GridLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <TextView
            android:id="@+id/move_count"
            android:text="Move Count: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="16dip"
            />

        <TextView
            android:id="@+id/sequence"
            android:text="Sequence: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:text="Auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="on_button_click_auto"
            android:id="@+id/button_auto" />

        <Button
            android:text="Restart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="on_button_click_restart"
            android:id="@+id/button_restart" />

    </LinearLayout>

</LinearLayout>
